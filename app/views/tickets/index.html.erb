<div class="container">

  <div class="jumbotron">
    <%= form_tag(tickets_path, method: :get, html: {class: 'form-horizontal'}) do %>
      <div class="input-group input-group-lg">
        <span class="input-group-addon">
      <%= check_box_tag :should_pay_only, 1, params[:should_pay_only] %>
    </span>
        <%= text_field_tag :quest,
                           nil,
                           class: 'form-control',
                           placeholder: t('tickets.search_patern'),
                           value: params[:quest] || '' %>
        <div class="input-group-btn">
          <%= submit_tag t('search'), class: 'btn btn-primary' %>
        </div>
      </div><!-- /input-group -->
    <% end %>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <p class="panel-title pull-left"><%= t 'ticket' %></p>
      <div class="clearfix"></div>
    </div>


    <div class="panel-body">
      <%= will_paginate if @tickets && @tickets.size > 0 && @tickets.instance_of?(ActiveRecord::Relation) %>
    </div>

    <div class="list-group">
      <%= render(@tickets) || t('no_tickets') %>
    </div>
  </div>

</div>
