
<%= form_tag(url, method: :get, html: {class: 'form-horizontal'}) do %>
  <div class="input-group input-group-lg">
    <%= text_field_tag :mobile, nil, placeholder: t('mobile'), class: 'form-control', value: params[:mobile] || '' %>
    <div class="input-group-btn">
      <%= submit_tag t('search'), class: 'btn btn-primary' %>
    </div>
  </div><!-- /input-group -->
<% end %>
