<div class="wrapper">
  <%= form_for(:session, url: path, html: {class: 'form-signin'}) do |f| %>
    <h2 class="form-signin-heading"><%= session_name %><%= t('login') %> </h2>
    <%= f.text_field :mobile, placeholder: t('mobile'), class: 'form-control' %>
    <%= f.password_field :password, placeholder: t('password'), class: 'form-control' %>
    <%= f.submit :submit, class: 'btn btn-primary btn-lg btn-block' %>
  <% end %>
</div>
